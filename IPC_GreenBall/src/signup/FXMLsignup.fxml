         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="CancelarRegistro" mnemonicParsing="false" onAction="#CancelarRegistroOnAction" text="Cancelar" />
               </children>
            </HBox>
            <Label fx:id="labelSignup" textFill="GREEN" />
            <Label fx:id="labelSignupError" textFill="RED" />
            <Button fx:id="enviarRegistroButton" mnemonicParsing="false" onAction="#enviarRegistroOnAction" onKeyPressed="#enterRegistro" text="Registrarse">
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
