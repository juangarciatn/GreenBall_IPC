            <TextField fx:id="apellido" onKeyPressed="#enterRegistro" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Teléfono*">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Text>
            <TextField fx:id="telefono" onKeyPressed="#enterRegistro" />
